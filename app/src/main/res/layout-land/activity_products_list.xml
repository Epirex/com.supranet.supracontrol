<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".ProductsListActivity">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/buttonsLayout"/>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true">

        <!-- Primera fila de botones y LottieAnimationView -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pantalla1"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:background="@drawable/pantalla1" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="120dp"
                android:layout_height="75dp"
                app:lottie_rawRes="@raw/send"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

        </LinearLayout>

        <!-- Segunda fila de botones y LottieAnimationView -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pantalla2"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:background="@drawable/pantalla2" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView2"
                android:layout_width="120dp"
                android:layout_height="75dp"
                app:lottie_rawRes="@raw/send"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

        </LinearLayout>

        <!-- Tercera fila de botones y LottieAnimationView -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pantalla3"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:background="@drawable/pantalla3" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView3"
                android:layout_width="120dp"
                android:layout_height="75dp"
                app:lottie_rawRes="@raw/send"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

        </LinearLayout>

        <!-- Cuarta fila de botones y LottieAnimationView -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pantalla4"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:background="@drawable/pantalla4" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView4"
                android:layout_width="120dp"
                android:layout_height="75dp"
                app:lottie_rawRes="@raw/send"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
